{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "build",
    "sourceMap": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "declaration": true,
    "incremental": true
  },
  "exclude": ["node_modules", "tests", "build"]
}
